             mc:Ignorable="d"
             x:Class="CirculoAntad.Views.Registro.RegistroCincoPage"
                                    BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundImageSource="fondoaltt"
             Title="REGISTRO PASO 5/9" >
