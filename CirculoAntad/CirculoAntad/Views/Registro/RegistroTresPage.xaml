             mc:Ignorable="d"
             x:Class="CirculoAntad.Views.Registro.RegistroTresPage"
                                     BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundImageSource="fondoaltt"
             Title="REGISTRO PASO 3/9" >
