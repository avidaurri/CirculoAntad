             mc:Ignorable="d"
             x:Class="CirculoAntad.Views.Registro.RegistroCuatroPage"
                                       BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundImageSource="fondoaltt"
             Title="REGISTRO PASO 4/9" >
